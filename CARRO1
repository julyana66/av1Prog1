import java.util.ArrayList;

public class Carro {
    private String marca;
    private float motor;
    private String cor;
    private String combustivel;
    private Double Km;
    private boolean status = false;
    ArrayList<Carro> listCarro;


    	
    
    
    public Carro(String marca, float motor, String cor, String combustivel, Double Km) {
        this.marca=marca;
        this.motor=motor;
        this.cor=cor;
        this.combustivel=combustivel;
        this.Km=Km;
        ArrayList<Carro> listCarro = new ArrayList<Carro>();

    }

    public Double getQuilometragem() {
        return Km;
    }
    public void setQuilometragem( Double Km)
    {
        this.Km=Km;
    }

	public String getmarca() {
		return marca;
	}

	public void setmarca(String marca) {
		this.marca = marca;
	}

	public float getMotor() {
		return motor;
	}

	public void setMotor(float motor) {
		this.motor = motor;
	}

	public String getCor() {
		return cor;
	}

	public void setCor(String cor) {
		this.cor = cor;
	}

	public String getCombustivel() {
		return combustivel;
	}

	public void setCombustivel(String combustivel) {
		this.combustivel = combustivel;
	}
	
	
	void alugarCarro(){
		if (this.status = false) 		
		System.out.println("Carro Alugado");
	
	else {
		System.out.println("Carro não está disponível no momento, escolha outro modelo");
	}
    
}
}
